@model Trip

@{ 
    string title = ViewBag.Action + "Trip Destination and Dates";
    ViewBag.Title = title;

    var session = new TripSession(Context.Session);
    var trip = session.GetTrip();
} 

<h2>@title</h2>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for=@trip.Destination>Destination</label>
        <input asp-for=@trip.Destination class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for=@trip.Accommodation>Accommodations</label>
        <input asp-for=@trip.Accommodation class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for=@trip.StartDate>Start Date</label>
        <input asp-for=@trip.StartDate placeholder="MM/dd/yyyy" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for=@trip.EndDate>End Date</label>
        <input asp-for=@trip.EndDate placeholder="MM/dd/yyyy" class="form-control" />

        <input type="hidden" asp-for=@trip.TripId />

        <button type="submit" class="btn btn-primary">Next</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>