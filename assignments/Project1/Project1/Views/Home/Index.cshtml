@model List<Trip>

@{ 
    ViewBag.Title = "My Trip Log";
} 
@if (TempData.Peek("message") != null)
{
    <h2 class="jumbotron">@TempData["message"]</h2>
}
<a asp-controller="Trip" asp-action="Add">Add Trip</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things To Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var trip in Model)
            {
                <tr>
                    <td>@trip.Destination</td>
                    <td>@trip.StartDate.ToString("MM/dd/yyyy")</td>
                    @if(trip.Accommodation != null)
                    {
                        <td>
                            @trip.Accommodation<br />
                            Phone: @trip.AccommodationPhone | Email: @trip.AccommodationEmail
                        </td>
                    }
                    else { <td></td> }
                    <td>
                        @trip.ThingToDo1<br />
                        @trip.ThingToDo2<br />
                        @trip.ThingToDo3
                    </td>
                </tr>
            }
    </tbody>
</table>