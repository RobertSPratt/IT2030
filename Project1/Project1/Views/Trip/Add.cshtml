@model Trip

@{ 
    string title = ViewBag.Action + "Trip Destination and Dates";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Accommodation">Accommodations</label>
        <input asp-for="Accommodation" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" placeholder="Enter Start Date MM/DD/YYYY" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" placeholder="MM/dd/yyyy" class="form-control" />
    </div>

    <input type="hidden" asp-for="TripId" />

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>