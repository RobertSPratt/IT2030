@model Trip

@{ 
    string title = ViewBag.Action;
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Accommodate" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AccommodationPhone">Phone Number</label>
        <input asp-for="AccommodationPhone" placeholder="123-456-7890" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AccommodationEmail">Email Address</label>
        <input asp-for="AccommodationEmail" placeholder="example@example.com" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>